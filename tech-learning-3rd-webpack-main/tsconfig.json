{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "src/*": [
        "src/*"
      ]
    },
    "target": "ESNEXT",  
    "module": "ESNext", 
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,                
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noEmit": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "src/typings"],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "public"
  ]
}
